window.currentPBSScenario = 'TransferAfter2NRebidBal';
console.log('PBS: Logging scenario selection for TransferAfter2NRebidBal');
fetch('https://bba.harmonicsystems.com/api/scenario/select', {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
        'X-Client-Version': '1.0.0'
    },
    body: JSON.stringify({
        scenario: 'TransferAfter2NRebidBal',
        user: whoAmI() || 'anonymous'
    })
}).then(function(r){ console.log('PBS: Server response', r.status); }).catch(function(e){ console.log('PBS: Fetch error', e); });
setDealerCode(`

/*
auction-filter: .
*/
# Transfers after 2N Rebid
dealer north

nO = hcp(north)>17 and hcp(north)<20 and shape(north, any 4333 +any 4432 +any 5332 +any 5422)

# South responds
sR = hcp(south)>5 and hcp(south)<13 and shape(south, any 4333 +any 4432 +any 5332)

# Now do it
nO and sR
`, "N", true)
