Script,SCS16-1SuitedOpnr
window.currentPBSScenario = 'SCS16-1SuitedOpnr';
window.currentPBSScenarioFilename = 'SCS16_1C_1SuitedOpnr';
console.log('PBS: Logging scenario selection for SCS16-1SuitedOpnr');
fetch('https://bba.harmonicsystems.com/api/scenario/select', {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
        'X-Client-Version': '1.0.0'
    },
    body: JSON.stringify({
        scenario: 'SCS16-1SuitedOpnr',
        user: whoAmI() || 'anonymous'
    })
}).then(function(r){ console.log('PBS: Server response', r.status); }).catch(function(e){ console.log('PBS: Fetch error', e); });
setDealerCode(`

/*
convention-card: Precision
auction-filter: Auction.....\n1C
*/
# convention-card: Precision


dealer south

solidC = clubs(south)>5 and top3(south,clubs)>2
solidD = diamonds(south)>5 and top3(south,diamonds)>2
solidH = hearts(south)>5 and top3(south,hearts)>2
solidS = spades(south)>5 and top3(south,spades)>2
solid = (solidC or solidD or solidH or solidS)

semiSolidC = clubs(south)>5 and top4(south,clubs)>2
semiSolidD = diamonds(south)>5 and top4(south,diamonds)>2
semiSolidH = hearts(south)>5 and top4(south,hearts)>2
semiSolidS = spades(south)>5 and top4(south,spades)>2
semiSolid = (semiSolidC or semiSolidD or semiSolidH or semiSolidS)

# South has 15+
(solid or semiSolid) and hcp(south)>15

# North has 0-4
and hcp(north)<5
`, "S", true)
Script
Button,1-Suited Opnr w/any resp,\n\
