### Imported script: TP (Total Points)


## Calculate TP for North 
# Calculate North's Short-Suit Penalty Points
nSP = spades(north)  <3 and hcp(north,spades)  >0 ? 1 : 0
nHP = hearts(north)  <3 and hcp(north,hearts)  >0 ? 1 : 0
nDP = diamonds(north)<3 and hcp(north,diamonds)>0 ? 1 : 0
nCP = clubs(north)   <3 and hcp(north,clubs)   >0 ? 1 : 0

# Calculate North's Short-Suit Points
n0 = spades(north)==0 + hearts(north)==0 + diamonds(north)==0 + clubs(north)==0
n1 = spades(north)==1 + hearts(north)==1 + diamonds(north)==1 + clubs(north)==1
n2 = spades(north)==2 + hearts(north)==2 + diamonds(north)==2 + clubs(north)==2
n01 = n0==1 ? 3 : 0  // 3 points for each void
n02 = n0==2 ? 6 : 0
n11 = n1==1 ? 2 : 0  // 2 points for each singleton
n12 = n1==2 ? 4 : 0
n13 = n1==3 ? 6 : 0
n21 = n2==1 ? 1 : 0  // 1 point for each doubleton
n22 = n2==2 ? 2 : 0
n23 = n2==3 ? 3 : 0
tpNorth = hcp(north) + n01+n02+n11+n12+n13+n21+n22+n23 -nSP-nHP-nDP-nCP


## Calculate TP for East
# Calculate East's Short-Suit Penalty Points
