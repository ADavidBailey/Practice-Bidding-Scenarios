e2 = spades(east)==2 + hearts(east)==2 + diamonds(east)==2 + clubs(east)==2
e01 = e0==1 ? 3 : 0
e02 = e0==2 ? 6 : 0
e11 = e1==1 ? 2 : 0
e12 = e1==2 ? 4 : 0
e13 = e1==3 ? 6 : 0
e21 = e2==1 ? 1 : 0
