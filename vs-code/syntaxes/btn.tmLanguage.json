{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "BTN",
  "scopeName": "source.btn",
  "patterns": [
    { "include": "#include-directive" },
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#variable-definition" },
    { "include": "#numbers" },
    { "include": "#user-variables" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.btn",
          "match": "//.*$"
        },
        {
          "name": "comment.line.hash.section.btn",
          "match": "(#####)\\s*(Imported Script|End of Imported Script)(:?)\\s*(.*?)\\s*(#####)?$",
          "captures": {
            "1": { "name": "punctuation.definition.comment.btn" },
            "2": { "name": "entity.name.section.btn" },
            "3": { "name": "punctuation.separator.btn" },
            "4": { "name": "entity.name.tag.btn" },
            "5": { "name": "punctuation.definition.comment.btn" }
          }
        },
        {
          "name": "comment.line.hash.metadata.btn",
          "match": "(#)\\s*(alias|button-text|scenario-title|button-style|gib-works|bba-works|auction-filter|convention-card-ns|convention-card-ew|[a-zA-Z-]+)(:)\\s*(.*)$",
          "captures": {
            "1": { "name": "punctuation.definition.comment.btn" },
            "2": { "name": "entity.name.tag.btn" },
            "3": { "name": "punctuation.separator.btn" },
            "4": { "name": "string.unquoted.btn" }
          }
        },
        {
          "name": "comment.line.hash.btn",
          "match": "#.*$"
        },
        {
          "name": "meta.chat-block.btn",
          "begin": "/\\*@chat",
          "end": "@chat\\*/",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.chat.begin.btn" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.chat.end.btn" }
          },
          "contentName": "string.unquoted.chat.btn"
        },
        {
          "name": "comment.block.btn",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "meta.directive.btn",
              "match": "(convention-card-ns|convention-card-ew|auction-filter)(:)\\s*(.*)",
              "captures": {
                "1": { "name": "entity.name.tag.btn" },
                "2": { "name": "punctuation.separator.btn" },
                "3": { "name": "string.unquoted.btn" }
              }
            }
          ]
        }
      ]
    },
    "include-directive": {
      "patterns": [
        {
          "name": "meta.preprocessor.include.btn",
          "match": "(#include)\\s+(\"[^\"]+\")",
          "captures": {
            "1": { "name": "keyword.control.import.btn" },
            "2": { "name": "string.quoted.double.include.btn" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.btn",
          "match": "\\b(generate|produce|condition|action|predeal|dealer|vulnerable|printpbn|printall|printcompact|printoneline|printew|printes|average|frequency|printoneline)\\b"
        },
        {
          "name": "keyword.other.condition.btn",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "support.function.btn",
          "match": "\\b(spades|hearts|diamonds|clubs|hcp|shape|controls|losers|tricks|quality|cccc|pt|hascard|top[1-5]|control|loser|c13|diamond|club|heart|spade|imp|imps|score)\\b"
        },
        {
          "name": "constant.language.btn",
          "match": "\\b(north|south|east|west|any)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.btn",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.btn",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "variable-definition": {
      "patterns": [
        {
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.other.definition.btn" },
            "2": { "name": "keyword.operator.assignment.btn" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.btn",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "user-variables": {
      "patterns": [
        {
          "name": "variable.other.user.btn",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?!\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.btn",
          "match": "(==|!=|>=|<=|>|<|&&|\\|\\||\\?|:|\\+|-|\\*|/)"
        }
      ]
    }
  }
}
