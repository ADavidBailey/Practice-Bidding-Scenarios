{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "PBS",
  "scopeName": "source.pbs",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#suits" },
    { "include": "#bids" },
    { "include": "#strings" },
    { "include": "#variable-definition" },
    { "include": "#numbers" },
    { "include": "#script-variables" },
    { "include": "#user-variables" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.pbs",
          "match": "//.*$"
        },
        {
          "name": "comment.line.hash.pbs",
          "match": "#.*$"
        },
        {
          "name": "comment.block.pbs",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.pbs",
          "match": "\\b(Import|Button|Generate|Predeal|Dealer|Vulnerable|Auction|Deal|Contract|Declarer|Result|Lead|Play|Score|Script|setDealerCode|produce|dealer|action|average)\\b"
        },
        {
          "name": "keyword.other.condition.pbs",
          "match": "\\b(condition|alert|announce|and|or|not)\\b"
        },
        {
          "name": "support.function.pbs",
          "match": "\\b(spades|hearts|diamonds|clubs|hcp|shape|controls|losers|tricks|quality|cccc|pt|hascard)\\b"
        },
        {
          "name": "constant.language.pbs",
          "match": "\\b(north|south|east|west|any)\\b"
        }
      ]
    },
    "suits": {
      "patterns": [
        {
          "name": "entity.name.tag.suit.spade.pbs",
          "match": "!S"
        },
        {
          "name": "entity.name.tag.suit.heart.pbs",
          "match": "!H"
        },
        {
          "name": "entity.name.tag.suit.diamond.pbs",
          "match": "!D"
        },
        {
          "name": "entity.name.tag.suit.club.pbs",
          "match": "!C"
        }
      ]
    },
    "bids": {
      "patterns": [
        {
          "name": "constant.numeric.bid.pbs",
          "match": "\\b[1-7][CDHSN]\\b"
        },
        {
          "name": "keyword.operator.bid.pbs",
          "match": "\\b(Pass|Double|Redouble|Dbl|Rdbl|X|XX|P)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.pbs",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.pbs",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.backtick.pbs",
          "begin": "`",
          "end": "`",
          "patterns": [
            { "include": "#comments" },
            { "include": "#keywords" },
            { "include": "#variable-definition" },
            { "include": "#numbers" },
            { "include": "#user-variables" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "variable-definition": {
      "patterns": [
        {
          "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(=)",
          "captures": {
            "1": { "name": "variable.other.definition.pbs" },
            "2": { "name": "keyword.operator.assignment.pbs" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.pbs",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "script-variables": {
      "patterns": [
        {
          "name": "variable.other.script.pbs",
          "match": "%[^%]+%"
        }
      ]
    },
    "user-variables": {
      "patterns": [
        {
          "name": "variable.other.user.pbs",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?!\\s*\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pbs",
          "match": "(==|!=|>=|<=|>|<|&&|\\|\\||\\?|:|\\+|-|\\*|/)"
        }
      ]
    }
  }
}
