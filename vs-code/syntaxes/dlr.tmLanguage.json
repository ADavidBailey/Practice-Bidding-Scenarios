{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bridge Dealer Script",
	"patterns": [
		{ "include": "#block-comments" },
		{ "include": "#line-comments" },
		{ "include": "#strings" },
		{ "include": "#section-headers" },
		{ "include": "#keywords" },
		{ "include": "#players" },
		{ "include": "#suits" },
		{ "include": "#functions" },
		{ "include": "#operators" },
		{ "include": "#shape-patterns" },
		{ "include": "#numbers" },
		{ "include": "#variables" }
	],
	"repository": {
		"block-comments": {
			"name": "comment.block.dlr",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"line-comments": {
			"patterns": [
				{
					"name": "comment.line.hash.dlr",
					"match": "#.*$"
				},
				{
					"name": "comment.line.double-slash.dlr",
					"match": "//.*$"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dlr",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dlr",
					"match": "\\\\."
				}
			]
		},
		"section-headers": {
			"name": "markup.heading.dlr",
			"match": "#{3,}.*#{3,}"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.dlr",
					"match": "\\b(dealer|condition|action|generate|produce|printpbn|printcompact|printew|printoneline|printes|printall|predeal)\\b"
				},
				{
					"name": "keyword.other.dlr",
					"match": "\\b(vulnerability|vul)\\b"
				}
			]
		},
		"players": {
			"patterns": [
				{
					"name": "entity.name.class.dlr",
					"match": "\\b(north|south|east|west)\\b"
				}
			]
		},
		"suits": {
			"patterns": [
				{
					"name": "support.type.dlr",
					"match": "\\b(spades|hearts|diamonds|clubs)\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.dlr",
					"match": "\\b(shape|hcp|controls|losers|cccc|quality|tricks|top[0-9]|pt[0-9]|loser|winner|hascard|imps|average|frequency)\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.logical.dlr",
					"match": "\\b(and|or|not)\\b"
				},
				{
					"name": "keyword.operator.dlr",
					"match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|%|\\?|:)"
				}
			]
		},
		"shape-patterns": {
			"patterns": [
				{
					"name": "constant.other.shape.dlr",
					"match": "\\b(any)\\b"
				},
				{
					"name": "constant.numeric.shape.dlr",
					"match": "\\b[0-9x]{4}\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.dlr",
					"match": "\\b[0-9]+\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other.dlr",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.dlr"
}
